extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Student Form
        
    
        form.w3-container(method="POST") 
            fieldset 
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=aluno.id readonly) 
                label Name
                input.w3-input.w3-round(type="text" name="nome" required value=aluno.nome)
                label Git
                input.w3-input.w3-round(type="text" name="gitlink" required value=aluno.gitlink)
            

            fieldset 
                legend TPC
                - for(let i=1;i<9;i++)
                    -let tpc=`tpc${i}`
                    if tpc in aluno 
                        input.w3-check(type="checkbox" name=tpc value="1" checked)
                        label TPC#{i}
                    else 
                        input.w3-check(type="checkbox" name=tpc value="1")
                        label TPC#{i}
                        
            fieldset 
                legend Avaliações 
                tabel Teste  
                input.w3-input.w3-round(type="text" name="Teste")
                tabel Pratica   
                input.w3-input.w3-round(type="text" name="Pratica")
            
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
        

        footer.w3-container.w3-purple 
            h5 Generated by EngWeb2023 in #{date} - [
                a(href="/") Return
                span ]

